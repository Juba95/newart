    </div>
    {# End Parallax #}
    {# News #}
    <div class="container">
        <div class="row">
            <div class="col-md-11 col-md-offset-1">
                <div class="news">
                    <h1 class="text-center">{{ 'Nos dernières\n'|nl2br }}<span class="titlestyle">{{ 'news'|upper }}</span></h1>

                    <div class="row col-md-6 col-md-offset-3">
                        <div class="barre center-block"></div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <div class="row newsarticle hidden-xs">
            {% set counter = 0 %}
            {% for article in articles|slice(0,4) %}
                {% set counter = counter + 1 %}

                {% if (counter == 1) %}
                    <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1">
                        <p>{{ article.createdAt|date('d/m/Y') }}</p>
                        <h3>{{ article.title }} </h3>
                        <img src="{{ asset('bundles/naeplateform/images/news/image2.jpg') }}" alt="Image News 1" class="img-responsive imgactu">
                        <a href="{{ path('nae_plateform_article', { 'id': article.id }) }}">Lire Plus</a>
                    </div>
                    <div class="col-md-1 col-sm-1 date-separator">
                        <h4 class="text-center">{{ "now"|date("m/Y") }}</h4>
                        <span class="trait-separator"></span>
                    </div>
                {% endif %}
                {% if counter == 2 %}
                    <div class="col-md-5 col-sm-5 article-suite">
                        <p>{{ article.createdAt|date('d/m/Y') }}</p>
                        <h3>{{ article.title }} </h3>
                        <img src="{{ asset('bundles/naeplateform/images/news/image2.jpg') }}" alt="Image News 1" class="img-responsive imgactu">
                        <a href="{{ path('nae_plateform_article', { 'id': article.id }) }}">Lire Plus</a>
                    </div>
                {% endif %}
                {% if counter == 3 %}
                    <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 article-news-3">
                        <p>{{ article.createdAt|date('d/m/Y') }}</p>
                        <h2>{{ article.title }}</h2>
                        <img src="{{ asset('bundles/naeplateform/images/news/image3.jpg') }}" alt="Image News 1" class="img-responsive imgactu">
                        <a href="{{ path('nae_plateform_article', { 'id': article.id }) }}">Lire Plus</a>
                    </div>
                {% endif %}
                {% if counter == 4 %}
                    <div class="col-md-5 col-md-offset-1 col-sm-5 col-sm-offset-1 last-article-news">
                        <p>{{ article.createdAt|date('d/m/Y') }}</p>
                        <h3>{{ article.title }} </h3>
                        <img src="{{ asset('bundles/naeplateform/images/news/image4.jpg') }}" alt="Image News 3" class="img-responsive imgactu">
                        <a href="{{ path('nae_plateform_article', { 'id': article.id }) }}">Lire Plus</a>
                    </div>
                {% endif %}
            {% endfor %}
    </div>
    <div class="row newsarticle visible-xs">
        {% set counter = 0 %}
        {% for article in articles|slice(0,4) %}
            {% set counter = counter + 1 %}

            {% if (counter == 1) %}
