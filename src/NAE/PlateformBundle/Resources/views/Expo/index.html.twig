                </form>
            </div>

            <div class="col-md-6">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputPays"></label>
                        <input type="text" class="form-control" id="exampleInputPays" placeholder="Pays">
                    </div>
                </form>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <form role="form">
                    <div class="form-group">
                        <label for="exampleInputPseudo"></label>
                        <input type="text" class="form-control" id="exampleInputPseudo" placeholder="Pseudo">
