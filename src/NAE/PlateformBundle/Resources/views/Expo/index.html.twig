    {# What is NAE #}
    <div class="container">
        <div class="row">
            <div class="col-md-11 col-md-offset-1">
                <div class="presnae">
                    <h1 class="text-center">{{ 'Qu\'est ce que\n'|nl2br }}<span class="titlestyle"> {{ 'new art expo'|upper }}</span></h1>
                    <div class="row col-md-6 col-md-offset-3">
                        <div class="barre center-block"></div>
                    </div>
                    <div class="row col-md-8 col-md-offset-2 pres-NAE-Home">
